{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": false,
        "baseUrl": "./node_modules/",
        "paths": {
            "*": ["@types/*", "*", "../typings/*"]
        },
        "outDir": "./build/"
    },
    "include": [
        "src",
        "../../common/**/*.ts"
    ]
}